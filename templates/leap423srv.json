{
  "variables":
  {
    "dist_ver": "42.3",

    "iso_url": "http://ftp.uni-erlangen.de/opensuse/distribution/leap/42.3/iso/openSUSE-Leap-42.3-NET-x86_64.iso",
    "iso_checksum_url": "http://ftp.uni-erlangen.de/opensuse/distribution/leap/42.3/iso/openSUSE-Leap-42.3-NET-x86_64.iso.sha256",
    "iso_checksum_type": "sha256",

    "out_dir_prefix": "/tmp/packer_out",

    "memory": "2048",
    "cpus": "2",
    "os_disk_size": "131072",

    "fusion_path": "/Applications/VMware Fusion.app"
  },

  "builders": [
    {
      "name": "virtualbox",
      "type": "virtualbox-iso",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_url": "{{user `iso_checksum_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "output_directory": "{{user `out_dir_prefix`}}/oSUSE-Leap-{{user `dist_ver`}}-{{build_name}}",

      "vm_name": "osuse-leap-{{user `dist_ver`}}",
      "guest_os_type": "OpenSUSE_64",
      "guest_additions_mode": "disable",
      "hard_drive_interface": "sata",
      "disk_size": "{{user `os_disk_size`}}",

      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}" ],
		[ "modifyvm", "{{.Name}}", "--audio", "none" ],
        [ "modifyvm", "{{.Name}}", "--usb", "off" ],
        [ "modifyvm", "{{.Name}}", "--rtcuseutc", "on" ]
      ],

      "ssh_username": "root",
      "ssh_password": "topsecret",
      "ssh_port": 22,
      "ssh_timeout": "90m",

      "boot_command": [
        "<esc><enter><wait>",
        "linux ",
        "lang=en_US ",
        "textmode=1 ",
        "autoyast2=https://raw.githubusercontent.com/colder-is-better/packer-templates/master/autoyast/leap423srv.ai.vmware.xml",
        "<enter>"
      ],

      "shutdown_command": "shutdown -P now",

      "headless": true
    },

    {
      "name": "vmware",
      "type": "vmware-iso",

      "fusion_app_path": "{{user `fusion_path`}}",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_url": "{{user `iso_checksum_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "output_directory": "{{user `out_dir_prefix`}}/oSUSE-Leap-{{user `dist_ver`}}-{{build_name}}",

      "vm_name": "osuse-leap-{{user `dist_ver`}}",
      "guest_os_type": "opensuse-64",
      "sound": false,
      "usb": false,
      "vnc_disable_password": true,
      "tools_upload_flavor": "",

      "vmx_data": {
        "memsize": "{{user `memory`}}",
        "numvcpus": "{{user `cpus`}}"
      },

      "disk_size": "{{user `os_disk_size`}}",

      "ssh_username": "root",
      "ssh_password": "topsecret",
      "ssh_port": 22,
      "ssh_timeout": "90m",

      "boot_command": [
        "<esc><enter><wait>",
        "linux ",
        "lang=en_US ",
        "textmode=1 ",
        "autoyast2=https://raw.githubusercontent.com/colder-is-better/packer-templates/master/autoyast/leap423srv.ai.vmware.xml",
        "<enter>"
      ],

      "shutdown_command": "shutdown -P now",

      "headless": true
    },

    {
      "name": "libvirt",
      "type": "qemu",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_url": "{{user `iso_checksum_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "output_directory": "{{user `out_dir_prefix`}}/oSUSE-Leap-{{user `dist_ver`}}-{{build_name}}",

      "accelerator": "kvm",
      "vm_name": "osuse-leap-{{user `dist_ver`}}.qcow2",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "disk_size": "{{user `os_disk_size`}}",
      "format": "qcow2",

      "qemuargs": [
        [ "-m", "{{user `memory`}}M" ]
      ],

      "ssh_username": "root",
      "ssh_password": "topsecret",
      "ssh_port": 22,
      "ssh_timeout": "90m",

      "boot_command": [
        "<wait5><esc><enter><wait>",
        "linux ",
        "lang=en_US ",
        "textmode=1 ",
        "autoyast2=https://raw.githubusercontent.com/colder-is-better/packer-templates/master/autoyast/leap423srv.ai.libvirt.xml",
        "<enter>"
      ],

      "shutdown_command": "shutdown -P now",

      "headless": true 
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "pause_before": "90s",
      "expect_disconnect": true,
      "script": "../provisioners/leap423srv.prov.sh"
    }
  ]
}
