{
  "variables":
  {
    "sles12sp3_iso_url": "http://download.suse.de/install/SLE-12-SP3-Server-GM/SLE-12-SP3-Server-DVD-x86_64-GM-DVD1.iso",
    "sles12sp3_iso_checksum": "48408157ef667100671b22f92c3e20771ccf2100108b96e3ae83d8df30abddd5",
    "sles12sp3_iso_checksum_type": "sha256",

    "out_dir_prefix": "/tmp/packer_out",

    "memory": "2048",
    "cpus": "2",
    "os_disk_size": "131072"
  },

  "builders": [
    {
      "name": "sles12sp3-virtualbox",
      "type": "virtualbox-iso",

      "iso_url": "{{user `sles12sp3_iso_url`}}",
      "iso_checksum": "{{user `sles12sp3_iso_checksum`}}",
      "iso_checksum_type": "{{user `sles12sp3_iso_checksum_type`}}",

      "output_directory": "{{user `out_dir_prefix`}}/{{build_name}}",

      "vm_name": "{{build_name}}",
      "guest_os_type": "OpenSUSE_64",
      "guest_additions_mode": "disable",
      "hard_drive_interface": "sata",
      "disk_size": "{{user `os_disk_size`}}",

      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}" ],
        [ "modifyvm", "{{.Name}}", "--audio", "none" ],
        [ "modifyvm", "{{.Name}}", "--usb", "off" ],
        [ "modifyvm", "{{.Name}}", "--rtcuseutc", "on" ]
      ],

      "ssh_username": "root",
      "ssh_password": "topsecret",
      "ssh_port": 22,
      "ssh_timeout": "90m",

      "boot_command": [
        "<esc><enter><wait>",
        "linux ",
        "lang=en_US ",
        "textmode=1 ",
        "autoyast2=https://raw.githubusercontent.com/colder-is-better/packer-templates/master/autoyast/sles12sp3.ai.vmware.xml",
        "<enter>"
      ],

      "shutdown_command": "shutdown -P now",

      "headless": false
    },

    {
      "name": "sles12sp3-vmware",
      "type": "vmware-iso",

      "fusion_app_path": "{{user `fusion_path`}}",

      "iso_url": "{{user `sles12sp3_iso_url`}}",
      "iso_checksum": "{{user `sles12sp3_iso_checksum`}}",
      "iso_checksum_type": "{{user `sles12sp3_iso_checksum_type`}}",

      "output_directory": "{{user `out_dir_prefix`}}/{{build_name}}",

      "vm_name": "{{build_name}}",
      "guest_os_type": "sles12-64",
      "sound": false,
      "usb": false,
      "vnc_disable_password": true,
      "tools_upload_flavor": "",

      "cpus": "{{user `cpus`}}",
      "memory": "{{user `memory`}}",
      "disk_size": "{{user `os_disk_size`}}",

      "ssh_username": "root",
      "ssh_password": "topsecret",
      "ssh_port": 22,
      "ssh_timeout": "90m",

      "boot_command": [
        "<esc><enter><wait>",
        "linux ",
        "lang=en_US ",
        "textmode=1 ",
        "autoyast2=https://raw.githubusercontent.com/colder-is-better/packer-templates/master/autoyast/sles12sp3.ai.vmware.xml",
        "<enter>"
      ],

      "shutdown_command": "shutdown -P now",

      "headless": true
    },

    {
      "name": "sles12sp3-libvirt",
      "type": "qemu",

      "iso_url": "{{user `sles12sp3_iso_url`}}",
      "iso_checksum": "{{user `sles12sp3_iso_checksum`}}",
      "iso_checksum_type": "{{user `sles12sp3_iso_checksum_type`}}",

      "output_directory": "{{user `out_dir_prefix`}}/{{build_name}}",

      "accelerator": "kvm",
      "vm_name": "{{build_name}}.qcow2",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "disk_size": "{{user `os_disk_size`}}",
      "format": "qcow2",

      "qemuargs": [
        [ "-m", "{{user `memory`}}M" ]
      ],

      "ssh_username": "root",
      "ssh_password": "topsecret",
      "ssh_port": 22,
      "ssh_timeout": "90m",

      "boot_command": [
        "<wait5><esc><enter><wait>",
        "linux ",
        "lang=en_US ",
        "textmode=1 ",
        "autoyast2=https://raw.githubusercontent.com/colder-is-better/packer-templates/master/autoyast/sles12sp3.ai.libvirt.xml",
        "<enter>"
      ],

      "shutdown_command": "shutdown -P now",

      "headless": true
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "pause_before": "2m",
      "expect_disconnect": true,
      "script": "../provisioners/sles.prov.sh"
    }
  ]
}
